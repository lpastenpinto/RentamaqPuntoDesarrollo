@model RentaMaq.Models.equipos

@{
    ViewBag.Title = "Eliminar Equipo";
}

<h2>Eliminar</h2>

@if (!RentaMaq.Models.equipos.SeUsa(Model.ID)) {

<h3>¿Está seguro/a que desea eliminar este equipo?</h3>
<div>
    <h4>Datos:</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.tipoEquipo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tipoEquipo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.patenteEquipo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.patenteEquipo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.año)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.año)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.numeroAFI)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.numeroAFI)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-default" /> |
            @Html.ActionLink("Volver", "Index")
        </div>
    }
</div>

}
else
{
    <br />
    <div class="col-md-8">
        <h3>El equipo se utiliza en reportes de consumo de combustible, por lo que no puede ser eliminado</h3>
    </div>
    <br />
    <div class="clearfix"></div>
    <br />
    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @Html.ActionLink("Volver", "Index")
        </div>
    }

}