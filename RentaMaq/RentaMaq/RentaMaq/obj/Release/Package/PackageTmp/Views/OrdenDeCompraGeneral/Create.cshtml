                        subtotal += total;

                        console.log("subtotal: " + subtotal);
                    });

                    $("#subtotal").val(subtotal);
                    miscelaneos = $("#miscelaneos").val();
                    totalNeto = subtotal + parseInt(miscelaneos);
                    $("#totalNeto").val(totalNeto);

                    IVA = $("#IVA").val();
                    Total = parseInt(totalNeto + ((IVA / 100) * totalNeto));
                    $("#total").val(Total);
                    
