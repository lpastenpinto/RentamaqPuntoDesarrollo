@model RentaMaq.Models.ordenPedidoCombustible

@{
    ViewBag.Title = "Delete";
}

<h2>Eliminar Orden de Pedido Combustible</h2>

<h3>¿Esta seguro que desea eliminar esta orden de pedido?</h3>
<div>
    <h4>Orden de Pedido de Combustible</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Numero Orden Pedido
        </dt>

        <dd>
            @Html.DisplayFor(model => model.numeroOrdenPedido)
        </dd>

        <dt>
           Señores:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.destinatario)
        </dd>

        <dt>
            Fecha
        </dt>

        <dd>
            @RentaMaq.Models.Formateador.fechaCompletaToString(@Model.fecha)
            
        </dd>
        

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-default" /> |
            @Html.ActionLink("Volver Atras", "Index")
        </div>
    }
</div>
