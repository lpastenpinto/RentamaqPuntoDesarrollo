                var textoActual = $(this).val();
                var key = String.fromCharCode(!event.charCode ? event.which : event.charCode);
                if (!regex.test(key)) {
                    event.preventDefault();
                    return false;
                }
                else if (key == '.' && textoActual.indexOf(".") >= 0) {
                    event.preventDefault();
                    return false;
                }
